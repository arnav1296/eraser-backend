// --- prisma/schema.prisma ---
// This schema includes the new 'hashedPassword' field for users and the
// 'documentState' field for boards, which is where the Yjs document is stored.
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  hashedPassword String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  boards    Board[]
}

model Board {
  id        String   @id @default(cuid())
  title     String?  @default("Untitled Board")
  isDeleted Boolean  @default(false)
  documentState Bytes?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}

// NOTE: The Stroke model from V1 is no longer required for V2, as drawing data
// is now stored in the Yjs 'documentState' field on the Board model.
